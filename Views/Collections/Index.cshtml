@model IEnumerable<Live_Quiz.Models.Collection>

@{
    ViewBag.Title = "Index";
}


<div class="card shadow m-4">
    <div class="card-header">

        <h2>Index</h2>
      
    </div>
    <div class="card-body">
        <p class="display-4">
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table table-active table-bordered table-responsive-sm">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.isPublic)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    <b>Image</b>
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isPublic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
           
            <td>
                <button type="button" class="btn" data-toggle="modal" data-target="#imageModal">
                    <img id="@item.Id" onclick="modalImageZoom(@item.Id)" src="/Collections/RetrieveImage/@item.ImageId" alt="@item.Name" height=40 width=100 />
                </button>

              
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
            }

        </table>

    </div>
</div>