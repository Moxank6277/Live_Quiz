@model Live_Quiz.Models.Question

@{
    ViewBag.Title = "Details";
}

<h2 class="text-center">Details</h2>

<div class="card text-center shadow w-75 m-auto">
    <h4 class="card-header display-3">Question</h4>
    <hr />
    <dl class="card-body">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Score)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Score)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Hint)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Hint)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.isPublic)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.isPublic)
        </dd>

    </dl>
    Options:
    <div class="w-50 m-auto">
        @foreach (var x in ViewBag.options)
        {
            if (x.isAnswer == true)
            {
                <div class="alert alert-success" role="alert">
                    @x.ans
                </div>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    @x.ans
                </div>
            }

        }
    </div>
</div>
<p class="alert alert-info text-center w-75 m-auto">
    @Html.ActionLink("Edit", "Edit", new { id = Model.QuestionId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
